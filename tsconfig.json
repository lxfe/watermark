{
    "exclude": ["node_modules", "dist", "test"],
    "include": ["src/**/*"],
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "strict": true,
        "outDir": "dist",
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true

    }
}